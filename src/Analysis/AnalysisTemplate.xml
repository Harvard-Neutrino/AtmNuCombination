<?xml version="1.0" encoding="UTF-8"?>
<Analysis>

<!--Anything common to a given neutrino source-->
<NeutrinoSource>
	<Atmospheric>
		<name> Atmospheric </name>
		<status> ON </status>
		<systematics>
			<flux_norm>
				<name> Flux Normalization </name>
				<nuisance> 1.0 </nuisance>
			</flux_norm>
			<nu_nubar_ratio>
				<name> Nu-Nubar Double Ratio </name>
				<nuisance> 1.2 </nuisance>
			</nu_nubar_ratio>
		</systematics>
	</Atmospheric>
<!--
	<Beam>
		<name> J-PARC Beam </name>
		<status> OFF </status>
	</Beam>
-->
</NeutrinoSource>


<!--Anything common to a given neutrino experiment-->
<NeutrinoExperiment>
	<Super-Kamiokande>
		<name> Super-Kamiokande </name>
		<status> ON </status>
		<exposure> 300 kton-year </exposure>
		<systematics>
			<syst1>
				<name> systematic1 </name>>
				<nuisance> 1.0 </nuisance>
			</syst1>
			<syst2>
				<name> systematic2 </name>>
				<nuisance> 1.2 </nuisance>
			</syst2>
		</systematics>
	</Super-Kamiokande>
	<Ice-Cube>
		<name> IceCube </name>
		<status> ON </status>
		<exposure> 300 kton-year </exposure>
		<systematics>
			<syst1>
				<name> systematic1 </name>>
				<nuisance> 1.0 </nuisance>
			</syst1>
			<syst2>
				<name> systematic2 </name>>
				<nuisance> 1.2 </nuisance>
			</syst2>
		</systematics>
	</Ice-Cube>
<!--
	<T2K>
		<name> T2K </name>
		<status> OFF </status>
		<exposure> 3.1e21 POT </exposure>
		<systematics>
			<syst1>
				<name> systematic1 </name>>
				<nuisance> 1.0 </nuisance>
			</syst1>
			<syst2>
				<name> systematic2 </name>>
				<nuisance> 1.2 </nuisance>
			</syst2>
		</systematics>
	</T2K>
-->
</NeutrinoExperiment>


<!--Mixing angles to be set in radians and mass splittings in eV^2-->
<NeutrinoOscillations>
	<ThreeFlavour>
		<name> Three Flavour Oscillations </name>
		<MixingAngles>
			<Theta12>
				<points> 1 </points>
				<first> 0.5 </first>
				<last> 0.5 </last>
				<best> 0.5 </best>
			</Theta12>
			<Theta13>
				<points> 1 </points>
				<first> 0.5 </first>
				<last> 0.5 </last>
				<best> 0.5 </best>
			</Theta13>
			<Theta23>
				<points> 1 </points>
				<first> 0.5 </first>
				<last> 0.5 </last>
				<best> 0.5 </best>
			</Theta23>
		</MixingAngles>
		<MassSplittings>
			<M21>
				<points> 1 </points>
				<first> 0.5 </first>
				<last> 0.5 </last>
				<best> 0.5 </best>
			</M21>
			<M31>
				<points> 1 </points>
				<first> 0.5 </first>
				<last> 0.5 </last>
				<best> 0.5 </best>
			</M31>
		</MassSplittings>
		<MassOrdering>
			<normal> ON </normal>
			<inverted> ON </inverted>
			<best> normal </best>
		</MassOrdering>
	</ThreeFlavour>
</NeutrinoOscillations>

</Analysis>